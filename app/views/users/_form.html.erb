
<div class="clearfix">
  
  <div class="input">    
    <!--<%= f.label :name, t("activerecord.attributes.user.name", :default => "Name*"), :class => :label  %>-->
    <%= f.text_field :name, :class => 'text_field' ,:placeholder => 'Hi! my name is..' %>
  </div>    
</div>

<div class="clearfix">
  
    <!--<%= f.label :password, t("activerecord.attributes.user.password", :default => "Password*"), :class => :label %>-->
  <div class="input">
    <%= f.password_field :password, :class => 'text_field' ,:placeholder => 'Password*' %>
  </div>
</div>

<div class="clearfix">
  
 <!--   <%= f.label :password_confirmation, t("activerecord.attributes.user.password_confirmation", :default => "Confirm*"), :class => :label %>-->
  <div class="input">
    <%= f.password_field :password_confirmation, :class => 'text_field' ,:placeholder => 'Confirm Password*' %>
  </div>
</div>

<div class="clearfix">
  
    <!--<%= f.label :email, t("activerecord.attributes.user.email", :default => "Email*"), :class => :label %>-->
  <div class="input">
    <%= f.text_field :email, :class => 'text_field' ,:placeholder => 'Mail me at..' %>
  </div>
</div>

<% if current_user %>
<div class="clearfix">
  
  <!--  <%= f.label :phone, t("activerecord.attributes.user.phone", :default => "Phone"), :class => :label %>-->
  <div class="input">
    <%= f.text_field :phone, :class => 'text_field' ,:placeholder => 'Call me at..' %>
  </div>
</div>

<div class="clearfix">
  
    <!--<%= f.label :address, t("activerecord.attributes.user.address", :default => "Address"), :class => :label %>-->
  <div class="input">
    <%= f.text_area :address, :class => 'text_area',:rows=> 2,:cols=> 28,:placeholder => 'I live at..' %>
  </div>
</div>

<div class="clearfix">  
   <!-- <%= f.label :company, t("activerecord.attributes.user.company", :default => "Company"), :class => :label %>-->
  <div class="input">
    <%= f.text_field :company, :class => 'text_field' ,:placeholder => 'I work at..'%>
  </div>
</div> 
   <% end %>
<%= f.hidden_field :user_type, :value => "User" %>

<div class="form-actions">
  <% if current_user %>
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", profile_path %>
  <%else %>
    <button class="btn btn-success" type="submit">Sign me up!!</button>
    <% end %>
</div>


