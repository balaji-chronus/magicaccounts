<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
			&times;</button>
			<h4 class="modal-title">Hi! Welcome! </h4>
		</div>
		<div class="modal-body">
			<%= form_for @user, :validate => true,:url => users_path do |f| -%>
				<div class="input-group">
				<%= f.text_field :name, {:class => 'text_field form-control', :placeholder => "User Name"} %>
				</div>
				<div class="input-group">
				<%= f.text_field :email, {:class => 'text_field form-control', :placeholder => "Email Address"} %>
				</div>    
				<div class="input-group">
				<%= f.password_field :password, {:class => 'text_field form-control', :placeholder => "Password"} %>
				</div>
				<div class="input-group">
				<%= f.password_field :password_confirmation, {:class => 'text_field form-control', :placeholder => "Confirm Password"} %>
				</div>
				<%= f.hidden_field :invite_status, :value => "registered" %>

				<br/>
				<div class="form-actions">
				<button class="btn btn-success" type="submit">Sign me up!!</button> 
				</div>
			<% end %>
		</div>
	</div>
</div>
<script type="text/javascript">
	jQuery('#modal').on('shown.bs.modal', function () {
	   $(this).find('#user_name').focus().end().find('form').enableClientSideValidations();			
	});
</script>
