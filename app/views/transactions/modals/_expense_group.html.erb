<!-- _expense_group.html.erb -->
<div class="modal fade" id="mg-expense-group" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center lead" id="myModalLabel"><strong>Select Group</strong></h4>
      </div>
      <div class="modal-body">
        <div class="list-group">
          <% current_user.user_groups.each do |group| %>
            <a href="javascript:void(0)" class="clearfix list-group-item">
              <div class="col-xs-10">
                <%= group.name %>
              </div>
              <div class="col-xs-2">
                <span class="icon-stack text-success pull-right">
                  <i class="icon-circle icon-stack-base"></i>
                  <i class="icon-ok icon-light icon-child"></i>
                </span>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->