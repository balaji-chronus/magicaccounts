<h1>Accounts</h1><br/>
<table class="table table-striped">
 <thead>
  <tr>
    <th>ID</th>
        <th>
      <%= t("activerecord.attributes.account.name", :default => t("activerecord.labels.name", :default => "Name")) %>
    </th>
        <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @accounts.each do |account| -%>
   <tr>
    <td><%= account.id %></td>
        <td><%= link_to account.name, account_path(account) %>
    </td>
        <td><%= account.created_at %></td>
    <td>      
      <%= link_to image_tag("edit_16x16.png"), edit_account_path(account) %>
      <%= link_to image_tag("delicon.png"), account_path(account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

<%= button_to "New", new_account_path, :method => "get", :class => 'btn primary' %>

