<div class="group_header wellgroup">
  <div class="group_image_container">
    <%= image_tag('icons/Account32x32.png', :size => "27x27") %>
  </div>
  <div class="group_information">
    <h3> Accounts </h3>
    <button class="btn primary" onClick="Utilities.redirectTo(event,'<%= new_account_path %>');" type="button">Create Account</button>
  </div>
</div>
<% if @ownedaccounts.empty? %>
<div class="well">
    You don't own any accounts at this point
</div>
<%else%>
<table class="table table-striped">
 <thead>
  <tr>    
    <th><%= t("activerecord.attributes.account.name", :default => t("activerecord.labels.name", :default => "Name")) %></th>
    <th>Group</th>
    <th>Created at</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @ownedaccounts.each do |account| -%>
   <tr>    
    <td><%= link_to account.name, account_path(account) %></td>
    <td><%= link_to Group.find(account.group_id).name, :controller => 'groups', :action => 'show', :id => account.group_id %></td>
    <td><%= account.created_at.strftime("%d/%m/%Y") %></td>
    <td>
      <%= link_to(edit_account_path(account)) do %>
        <i class='icon-pencil'></i>
      <% end %>
      <%= link_to(account_path(account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}") do %>
        <i class='icon-trash'></i>
      <% end %>      
    </td>
    </tr>
    <% end end -%>
   </tbody>
</table>


