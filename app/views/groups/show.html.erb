<% @page_title = "#{@group.name}" %>
<%= render :partial => "common/page_title", :locals => {:page_title => @page_title} %>
<div id="mg-groups-show" class="mg-wrap-container">
  <div class="bs-example bs-example-tabs">
    <ul id="myTab" class="nav nav-tabs lead">
      <li class="active"><a href="#group-balance" data-toggle="tab"><i class="icon-exchange"></i></a></li>
      <li class=""><a href="#profile" data-toggle="tab"><i class="icon-info"></i></a></li>
    </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active in" id="group-balance">
        <table class="table table-condensed">
          <thead>
          <tr>
            <th class="col-xs-3">User</th>
            <th class="text-center col-xs-6">Balance</th>
            <th class="text-right col-xs-3"># Expenses</th>
          </tr>
        </thead>
          <tbody>
            <% @balances.each do |balance_entry| %>
              <%= render :partial => "groups/balance_entry", :locals => {:balance_options => balance_entry} %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="profile">
         <%= render :partial => 'group_profile' %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  jQuery('#myTab a').click(function (e) {
    e.preventDefault();
    jQuery(this).tab('show')
  })

  jQuery(function() {
      var hash = window.location.hash;
      hash == "#profil" && $('ul.nav a[href="#profile"]').tab('show');
      hash == "#profile" && $('ul.nav a[href="' + hash + '"]').tab('show');
      hash == "#profile" && jQuery('#modal3').modal('show');
    });

  <% if Group.find_by_id(params[:id]).popover %> 
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
    jQuery('.btn').popover('show'); 
		})
  <% end %>
</script>



