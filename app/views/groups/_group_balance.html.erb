<div class = "text-center">
	<legend >Group Balance</legend>
	<% if @user_balance.nil? %> 
<p> Sorry, there are no transactions for this group </p>
<% else %>
	<div class="text-<%= @user_balance[:balance] == "0.0" ? "muted" : @user_balance[:display_class] == "negative" ? "danger" : "success" %>">
	<h5> <%= @user_balance[:balance] == "0.0" ? "Settled Up" : @user_balance[:display_class] == "negative" ? "You pay" : "You get" %></h5></div>
	<span class="badge balance <%= @user_balance[:balance] == "0.0" ? "muted" : @user_balance[:display_class] %>">
	<%= @user_balance[:balance] %>
	</span>
	<% end %>
	<legend >Recent Activity</legend>
	<% if get_activity_group(@group).empty? %>
		<p>There is no activity for this section<p></div>
	<%else%>
	<% activity_show_count = 0 %>
		<% get_activity_group(@group).each do |act| %>
		<% activity_show_count += 1 %>
			<% if activity_show_count < 4 %>
				<% activity_transaction = Transaction.find_by_id(act.commentable_id) %>
				<% if activity_transaction.present? %>
					<div class="list-group">
					<a href="<%= transaction_path(activity_transaction) %>" class="list-group-item">
					<h5 class="list-group-item-heading">
					<%= raw(render_user_image(act.user, 
					:size => 16, :class_name => "img-circle",:data_placement => "left") + render_activity(act)) %> </h5>
					<p class="list-group-item-text">
					<small>
					<%= activity_transaction.remarks %>
					</small>
					</p>
					</a>
					</div>
				<% end %>	
			<% end %>
		<% end%>
		<% if activity_show_count > 3 %>
			<%= link_to "More...",recent_activities_comments_path, :class => "pull-right" %>
		<% end %>
	<% end%>
<script type="text/javascript">
  jQuery('.img-circle').tooltip();
</script>