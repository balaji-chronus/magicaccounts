/********* Transactions Index *************/
#mg-transactions-list {
  margin-bottom: 0;
  td.mg-date-container {
    width: 90px;
  }

  .lead {
    margin-bottom: 0px;
  }

  .accordian-body {
    border: 1px solid #CCC;
    border-radius: 5px;
    background: #FCFCFC;
  }

  .mg-transaction-entry {
    cursor: pointer;
    height: 80px;

    .mg-expense-list-remarks {
      h5 {
        margin: 5px 0;
        font-weight: normal;
      }
    }

    td.mg-category-icon {
      vertical-align: middle;
    }
  }

  .transaction_detail_entry {
    padding: 0 20px;

    .well {
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
      margin-top: 20px;
      background: transparent;
    }

    .mg-category-tags {
      margin: 20px 0 30px;

      span {
        margin-right: 5px;
      }
    }

    .list-group-item {
      padding: 0;
      box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
      margin: 10px 0;
      background: transparent;

      img {
        margin: 7px 0;
      }
    }

    div {
      margin: 0 0 7px;
    }

    .progress {
      margin-bottom: 10px;
      height: 10px;
    }
  }
}

/*********** Groups Index *************/
#mg-group-entries {
  .mg-group-entry{
    td {
      vertical-align: middle;
    }
  }

  .mg-group-name {
      h5 {
        margin: 3px 0;
        font-weight: normal;
      }
    }
}

/*********** Groups Show *************/
#group-balance  {
  .badge.balance {
    min-width: 120px;  
  }
}

/*********** Groups Create ***********/
