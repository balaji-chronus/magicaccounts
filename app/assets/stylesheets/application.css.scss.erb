// Bootstrap body padding for fixed navbar
body { padding-top: 45px; }

@import "font-awesome";

/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the com`ed file, but it's generally better to create a new file per style scope.
 *= require_self
*/

/************* General Classes ****************/
body.modal-open, .modal-open .navbar-fixed-top, .modal-open .navbar-fixed-bottom {
  margin-right: 0px !important;  
}

::-webkit-input-placeholder { /* WebKit browsers */
  color: #CCC  ;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
  color: #CCC;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: #CCC;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
  color: #CCC;
}

html {
  overflow-y: scroll; 
}

body, html {
  height: 100%;
}

.circled {
  border-radius: 50% !important;
  -webkit-border-radius: 50%  !important;
}

.action-group {
  margin-bottom: 0 !important;
}

.navbar {
  min-height: 45px !important;
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
  -webkit-box-shadow: 0 5px 5px rgba(0, 0, 0, 0.2);
}

.navbar-brand {
  letter-spacing: 1px;
  padding: 12px 0px 10px !important;
  text-shadow: 2px 3px  #2c3e50;
}

.navbar-brand:hover {
  text-shadow: none;
}

#navbar-main .nav > li > a {
  padding: 10px 5px !important;
}

.navbar-toggle {
  padding: 3px 7px !important;
  margin: 7px 15px !important;
}

.navbar-nav {
  margin: 0 !important;
}
 
/* The ghost, nudged to maintain perfect centering */
.h-align-container:before {
  content: '';
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  margin-right: -0.25em; /* Adjusts for spacing */
}

/* The element to be centered, can
   also be of any width and height */ 
.h-align {
  display: inline-block;
  vertical-align: middle;
}

.element-reverse {
  rotation: -180deg !important;
  -webkit-transform: rotate(-180deg);
  -moz-transform: rotate(-180deg);
}

.collapse {
  -webkit-transition: height 1s;
  -moz-transition: height 1s;
  -ms-transition: height 1s;
  -o-transition: height 1s;
  transition: height 1s;
}

.remove-gutter {
  padding: 0 !important;  
}

.remove-margin-gutter {
  margin: 0 !important;  
}

.remove-left-gutter {
  padding-left: 0 !important;
}

.remove-right-gutter {
  padding-right: 0 !important;
}

.remove-top-gutter {
  padding-top: 0 !important;
}

.remove-bottom-gutter {
  padding-bottom: 0 !important;
}

.modal-header {
  background-color: #3498db;
  color: #FFF;
}

legend {
  margin-top: 25px !important;
  padding: 8px 0 7px !important;
}
/******* Common App Styles *****************/

.mg-date{
  position: relative; 
  color: #999; 
  margin: 0 auto;

  .mg-day {
    position: absolute;
    font-size: 30px;
    line-height: 30px;
    top: 25px;
  }

  .mg-month{
    position: absolute;
    top: 5px;
    left: 3px;
    font-size: 18px;
    line-height: 18px;
  }

  .mg-year {
    position: absolute;
    top: 17px;
    right: 0;
    font-size: 20px;
    rotation: -90deg !important;
    -webkit-transform: rotate(-90deg);
    -moz-transform: rotate(-90deg);
  }
}

.mg-action-links {
  white-space: nowrap;
}

.mg-wrap-container {
  padding: 15px;
}

.badge.positive {
  background-color: #18bc9c;
}

.badge.negative {
  background-color: #e74c3c;
}

table.shadow-row tr td {
  -webkit-box-shadow:  inset 0 -5px 5px -5px rgba(0,0,0,0.25);
  box-shadow: inset 0 -5px 5px -5px rgba(0,0,0,0.25);
}

.top-shadow {
  box-shadow: 0px 2px 2px #CCC, 0px -2px 2px #CCC !important;
  -webkit-box-shadow: 0px 2px 2px #CCC, 0px -2px 2px #CCC !important;
  margin-bottom: 2px !important;
}

/******* Non-Logged-In Pages Styles *******/

.jumbotron {
  background: url('<%= asset_path('blurred-background-1.jpg') %>') center center repeat;

  h1 {
    font-weight: bold;
  }

  blockquote {
    padding: 25px 0;
    border: none;
  }
}

#mg-forgot-password-link {
  line-height: 31px;
}

#mg-four-col-feature {
  .panel { padding: 10px 15px;}
  .well { margin-bottom: 0; }
