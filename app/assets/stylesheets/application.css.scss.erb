    background: url('<%= asset_path('noise-pattern.jpg') %>') center center repeat;
  }

  .add-remove-users {
    margin: 5px 0;
  }
}

/************ Transactions Create *************/
#mg-transaction-create {
  .btn-lg {
    padding: 25px 25px;
    font-size: 13px;
    line-height: 0.33;
    border: 1px solid;
    text-transform: capitalize;
  }

  .toggle-handle {
    border-radius: 100px;
  }

  .input-group-addon {
