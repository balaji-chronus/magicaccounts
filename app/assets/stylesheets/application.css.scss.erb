// Bootstrap body padding for fixed navbar
body { padding-top: 60px; }

@import "font-awesome";

/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require flatly/loader
 *= require flatly/bootswatch
 *= require font-awesome
 *= require jquery.ui.core
 *= require jquery.ui.theme
 *= require select2
*/

/************* General Classes ****************/

body, html {
  height: 100%;
}

.circled {
  border-radius: 50% !important;
  -webkit-border-radius: 50%  !important;
}

.dropdown-menu {
  min-width: 325px !important;
  max-height: 350px !important;
  overflow-y: scroll !important;
}

.action-group {
  margin-bottom: 0 !important;
}

.navbar-brand {
  letter-spacing: 1px;
  padding: 22px 15px 20px !important;
  text-shadow: 2px 1px  #2c3e50;
}

.nav > li > a {
  padding-left: 5px !important;
  padding-right: 5px !important;
}

/******* Non-Logged-In Pages Styles *******/

#mg-forgot-password-link {
  line-height: 31px;
}

#mg-four-col-feature .panel {
  padding: 10px 15px;
}

/****** Common Logged-in Page Styles *********/

#mg-recent-activity-dropdown {
  .panel-body { padding: 0 5px;}
  .panel-footer { margin-top: 5px; }
  .list-group { margin-top: 5px; margin-bottom: 0; }
}

#mg-page-wrap, #mg-app-container {
  height: 100%;
}

#mg-left-pane {
  height: 100%;
  padding: 15px 5px;
}

#mg-center-pane {
  height: 100%;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  -box-shadow: 0 0 15px rgba(0,0,0,0.2);
}

#mg-right-pane {
  height: 100%;
}

